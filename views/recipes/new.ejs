<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Recipes</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Add a New Recipe</h1>
    <form action="/recipes" method="POST">
      <div>
        <label for="name">Recipe Name: </label>
        <input  type="text" id="name" name="name">
      </div>
      <div>
        <label for="instructions">Instructions: </label>
        <textarea  id="instructions" name="instructions" rows="5" maxlength="500"></textarea>
      </div>
      <div>
        <label>Ingredients: </label>
      <div>
        <% ingredients.forEach(ingredient => { %>
        <div>
          <input  type="checkbox" name="ingredients" value="<%= ingredient._id %>" id="ingredient-<%= ingredient._id %>">
          <label for="ingredient-<%= ingredient._id %>"><%= ingredient.name %></label>
        </div>
        <% }) %>
      </div>
      </div>

      <button type="submit">Create Recipe</button>
    </form>
  </body>
</html>

