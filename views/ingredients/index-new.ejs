<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Ingredients</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Ingredients</h1>
    <!-- <a href="/ingredients/new">Add Ingredients</a> -->
    <ul>
      <% ingredients.forEach((ingredient) => { %>
        <li>
         <%= ingredient.name %>
        </li>
      <% }) %>
    </ul>
    <div>
    <form action="/ingredients" method="POST">
      <label for="ingredients">Ingredients</label>
      <input list="ingredients" id="ingredient" name="name">
        <datalist id="ingredients">
          <option value="Tomato">
          <option value="Cheese">
          <option value="Basil">
          <option value="Olive Oil">
          <option value="Garlic">
          <option value="Onion">
          <option value="Salt">
          <option value="Pepper">
          <option value="Butter">
          <option value="Flour">
          <option value="Sugar">
          <option value="Eggs">
          <option value="Milk">
          <option value="Cream">
          <option value="Oregano">
          <option value="Parsley">
          <option value="Cilantro">
          <option value="Paprika">
          <option value="Chili Powder">
          <option value="Cumin">
          <option value="Lemon">
          <option value="Lime">
          <option value="Chicken">
          <option value="Beef">
          <option value="Pork">
          <option value="Fish">
          <option value="Shrimp">
          <option value="Rice">
          <option value="Pasta">
          <option value="Bread">
          <option value="Mushrooms">
          <option value="Spinach">
          <option value="Carrots">
          <option value="Potatoes">
          <option value="Bell Peppers">
          <option value="Avocado">
          <option value="Soy Sauce">
          <option value="Vinegar">
          <option value="Honey">
          <option value="Brown Sugar">
          <option value="Yeast">
          <option value="Baking Powder">
          <option value="Baking Soda">
          <option value="Vanilla Extract">
        </datalist>
        <button type="submit">Select Ingredients</button>
    </form>
    </div>
  </body>
</html>