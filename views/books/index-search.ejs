<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>My Profile</title>
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Search Results</h1>
    <div class="book-list-container"> 
        <ul class="book-list">
        <% results.forEach((result) => { %>
            <li class="book-item">
            <img class="book-cover" src="<%= result.coverUrl %>" alt="Cover for <%= result.title %>">
            <div class="book-info">
                <strong><%= result.title %></strong><br>
                Written by <%= result.author %>
            </div>
            <div class="book-select">
                <form action="/books" method="POST">
                    <input type="hidden" name="name" value="<%=result.title%>">
                    <input type="hidden" name ="author" value="<%=result.author%>">
                    <input type="hidden" name="coverURL" value="<%=result.coverUrl%>">
                    <button type="submit" class="submitbtn">Select</button>
                </form>
            </div>
            </li>
        <% }) %>
        </ul>
    </div>  
      
        
        
    <%- include('../partials/footer') %>
    </body>
</html>