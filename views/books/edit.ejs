<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit <%= recipe.name %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Edit a Recipe!</h1>
    <form action="/recipes/<%= recipe._id %>?_method=PUT"  method="POST">
      <div>
        <label for="name">Recipe Name: </label>
        <input  type="text" id="name" name="name" value="<%= recipe.name%>" >
      </div>
      <div>
        <label for="instructions">Instructions: </label>
        <textarea  id="instructions" name="instructions" rows="5" maxlength="500"><%=recipe.instructions%></textarea>
      </div>
      <div>
        <label>Ingredients: </label>
      <div>
        <% ingredients.forEach(ingredient => { %>
        <div>
          <input  type="checkbox" name="ingredients" value="<%= ingredient._id %>" id="ingredient-<%= ingredient._id %>" <%=recipe.ingredients.includes(ingredient._id)? "checked":"" %>>
          <label for="ingredient-<%= ingredient._id %>"><%= ingredient.name %></label>
        </div>
        <% }) %>
      </div>
      </div>

      <button type="submit">Edit Recipe</button>
    </form>
  </body>
</html>